@layer components {
  .btn {
    @apply flex items-center justify-center gap-1 rounded-lg border-2 border-transparent bg-surface-600 px-4 py-2 font-semibold outline-none transition focus-visible:border-surface-100;

    &:disabled {
      @apply opacity-50;
    }

    &:not(:disabled) {
      @apply hover:bg-surface-700 hover:text-surface-50 active:scale-95;
    }

    &-primary {
      @apply bg-primary-500 text-surface-950;
      @apply focus-visible:border-primary-100;
      &:not(:disabled) {
        @apply hover:bg-primary-600;
      }
    }

    &-secondary {
      @apply bg-secondary-500;
      @apply focus-visible:border-secondary-100;
      &:not(:disabled) {
        @apply hover:bg-secondary-600;
      }
    }

    &-danger {
      @apply bg-danger-500;
      @apply focus-visible:border-danger-100;
      &:not(:disabled) {
        @apply hover:bg-danger-600;
      }
    }

    &-transparent {
      @apply bg-transparent text-surface-50;
    }

    &-icon {
      @apply w-fit rounded-full bg-transparent p-1 text-surface-300 focus-visible:border-current;

      &:not(:disabled) {
        @apply hover:border-transparent hover:bg-surface-600 hover:text-surface-50;
      }
    }

    &-icon&-primary {
      @apply text-primary-500;
      &:not(:disabled) {
        @apply hover:bg-primary-600;
      }
    }

    &-icon&-secondary {
      @apply text-secondary-500;
      &:not(:disabled) {
        @apply hover:bg-secondary-600;
      }
    }

    &-icon&-danger {
      @apply text-danger-500;
      &:not(:disabled) {
        @apply hover:bg-danger-600;
      }
    }

    &-small {
      @apply px-3 py-1 text-sm;
    }
  }
}
